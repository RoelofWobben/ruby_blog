<%= form_with model: @article do |form| %>
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="group">
                            <%= form.text_field :title,:required => true %>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Name</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="group">
                            <%= form.text_area :body, :required => true %>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <%= form.label :body, "Text" %><br>
                        </div>
                    </div>
                    <div class="col-12">
                        <%= form.submit "Submit", :class => "btn original-btn" %>
                    </div>
                </div>
            <% end %>